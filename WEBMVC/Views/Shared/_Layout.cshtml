<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Ramazan KÜÇÜKKOÇ</title> 
    @await Html.PartialAsync("_LayoutCssPartial")

    <style>
        .site-header {
            background-color: rgba(0, 0, 0, .85);
            -webkit-backdrop-filter: saturate(180%) blur(20px);
            backdrop-filter: saturate(180%) blur(20px);
        }

            .site-header a {
                color: #8e8e8e;
                transition: color .15s ease-in-out;
            }

                .site-header a:hover {
                    color: #fff;
                    text-decoration: none;
                }
    </style>
</head>
<body>
    <header class="site-header sticky-top py-1">
        <nav class="container d-flex flex-column flex-md-row justify-content-between">
            <a class="py-2" href="#" aria-label="Product">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="d-block mx-auto" role="img" viewBox="0 0 24 24"><title>Product</title><circle cx="12" cy="12" r="10" /><path d="M14.31 8l5.74 9.94M9.69 8h11.48M7.38 12l5.74-9.94M9.69 16L3.95 6.06M14.31 16H2.83m13.79-4l-5.74 9.94" /></svg>
            </a>
            <a class="py-2 d-none d-md-inline-block" asp-controller="Products" asp-action="Index">Ürünler</a>

            <a class="py-2 d-none d-md-inline-block" asp-controller="Categories" asp-action="Index">Kategoriler</a>
            <a class="py-2 d-none d-md-inline-block" asp-controller="Departman" asp-action="Index">Departmanlar</a>
            <a class="py-2 d-none d-md-inline-block" asp-controller="Customer" asp-action="Index">Müşteriler</a>
            <a class="py-2 d-none d-md-inline-block" asp-controller="CustomerTransaction" asp-action="Index">Müşteriye Satışlar</a>
            <a class="py-2 d-none d-md-inline-block" asp-controller="Company" asp-action="Index">Firmalar</a>
            <a class="py-2 d-none d-md-inline-block" asp-controller="CompanyTransaction" asp-action="Index">Firmanın Satışları</a>
            <a class="py-2 d-none d-md-inline-block" asp-controller="Personel"asp-action="Index">Personeller</a>
            <a class="py-2 d-none d-md-inline-block" href="#">Cart</a>
        </nav>
    </header>
<main>
        <div class="position-relative overflow-hidden p-3 p-md-2 m-md-3 text-center bg-light">
           
				@RenderBody()
       
           

        </div>

</main>       
   

    
    


    
    @await Html.PartialAsync("_LayoutJsPartial")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
